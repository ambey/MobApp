<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/custNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTextView"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/custPhoneView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/custNameView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/custPhoneView"
        android:layout_toStartOf="@id/custPhoneView"
        android:layout_alignBottom="@id/custNameView"
        android:text="@string/phone_lbl" />

    <TextView
        android:id="@+id/drNameLblView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custNameView"
        android:text="@string/dr_lbl"/>

    <TextView
        android:id="@+id/drNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/drNameLblView"
        android:layout_toRightOf="@id/drNameLblView"
        android:layout_alignBottom="@id/drNameLblView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/drPhoneView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/drNameLblView"/>

    <TextView
        android:id="@+id/drClinicView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/drNameView"
        android:layout_alignStart="@id/drNameView"
        android:layout_below="@id/drNameView"
        android:textColor="#00f"/>

</RelativeLayout>