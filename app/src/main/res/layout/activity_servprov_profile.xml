<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.ServProvViewProfile">

    <include
        android:id="@+id/layoutNameAvatar"
        layout="@layout/layout_name_avatar" />

    <View
        android:id="@+id/linenView"
        android:layout_width="fill_parent"
        android:layout_height="0.4dp"
        android:layout_below="@+id/layoutNameAvatar"
        android:layout_marginTop="20dp"
        android:background="#9d9d9d" />

    <LinearLayout
        android:id="@+id/layoutEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linenView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewEdit1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/edit_info"
                android:src="@drawable/editpen" />

            <TextView
                android:id="@+id/textViewEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="viewBasicInfo"
                android:text="@string/edit_info" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewEdit2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/editpen" />

            <TextView
                android:id="@+id/textViewEdit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="viewWorkDetails"
                android:text="@string/edit_wrk" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutEditButton"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textViewDoc"
                style="@style/CollapseFormHeading"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="@string/drName"/>

            <TextView
                android:id="@+id/ViewEditDocName"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/textViewDoc"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/pencil"
                android:clickable="true"
                android:onClick="editName" />

            <TextView
                android:id="@+id/textViewEditDocName"
                style="@style/FormHeadingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ViewEditDocName"
                android:layout_toStartOf="@+id/ViewEditDocName"
                android:layout_alignBottom="@id/ViewEditDocName"
                android:onClick="editName"
                android:text="@string/edit1"/>


            <TextView
                android:id="@+id/viewFname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewDoc"
                android:layout_marginTop="10dp"
                android:text="@string/first_name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/textViewFName"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewDoc"
                android:enabled="false"
                android:hint="@string/first_name"/>

            <TextView
                android:id="@+id/viewLname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewFname"
                android:layout_marginTop="10dp"
                android:text="@string/last_name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/textViewLName"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewFName"
                android:enabled="false"
                android:hint="@string/last_name"/>

            <TextView
                android:id="@+id/viewEducation"
                style="@style/CollapseFormHeading"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewLname"
                android:layout_marginTop="20dp"
                android:text="@string/education"/>

            <TextView
                android:id="@+id/viewEditEducation"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/viewEducation"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/pencil"
                android:onClick="editQualification" />

            <TextView
                android:id="@+id/textViewEditEducation"
                style="@style/FormHeadingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewEditEducation"
                android:layout_toLeftOf="@+id/viewEditEducation"
                android:layout_toStartOf="@+id/viewEditEducation"
                android:onClick="editQualification"
                android:text="@string/edit1"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/textViewEducation"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewEducation"
                android:enabled="false"
                android:hint="@string/education"/>

            <TextView
                android:id="@+id/viewWorkExp"
                style="@style/CollapseFormHeading"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewEducation"
                android:layout_marginTop="20dp"
                android:text="@string/wrkxp"/>

            <TextView
                android:id="@+id/viewEditWorkExp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/viewWorkExp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/pencil"
                android:clickable="true"
                android:onClick="editExp" />

            <TextView
                android:id="@+id/textViewEditWorkExp"
                style="@style/FormHeadingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewEditWorkExp"
                android:layout_toLeftOf="@+id/viewEditEducation"
                android:layout_toStartOf="@+id/viewEditEducation"
                android:onClick="editExp"
                android:text="@string/edit1"/>

            <EditText
                android:id="@+id/textViewWorkExp"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewWorkExp"
                android:enabled="false"
                android:hint="@string/year"/>

            <TextView
                android:id="@+id/textViewExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewWorkExp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textViewWorkExp"
                android:layout_toRightOf="@+id/textViewWorkExp"
                android:text="@string/year"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonViewUpdate"
                style="@style/ExtraWideButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewWorkExp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:onClick="updateProfile"
                android:text="@string/update"/>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
