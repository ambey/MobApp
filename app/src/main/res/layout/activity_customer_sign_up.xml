<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.medico.CustomerSignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/editTextCustomerFName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextCnfPasswd"
        android:layout_below="@+id/editTextCnfPasswd"
        android:ems="10"
        android:hint="First Name *"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/editTextCustomerLName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/editTextCustomerFName"
        android:ems="10"
        android:hint="Last Name *"
        android:inputType="textPersonName"
        android:layout_marginLeft="12dp"/>

    <EditText
        android:id="@+id/editTextCellphone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cellphone Number *"
        android:inputType="phone"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editTextCustomerFName"/>
    <EditText
        android:id="@+id/editTextCustomerEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Id *"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editTextCellphone"/>
    <EditText
        android:id="@+id/editTextPasswd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCustomerEmail"
        android:ems="10"
        android:hint="Password *"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTextConPasswd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPasswd"
        android:ems="10"
        android:hint="Confirm Password *"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>



    <TextView android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@+id/viewGender"
        android:background="@drawable/label"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="@string/gender"
        android:layout_below="@+id/editTextConPasswd"
        android:layout_alignRight="@+id/editTextConPasswd"
        android:layout_alignEnd="@+id/editTextConPasswd"
        android:layout_marginTop="10dp"/>
    <Spinner android:entries="@array/genderType"
        android:id="@+id/spinGender"
        android:background="@drawable/spinner"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:prompt="@string/gender"
        android:layout_below="@+id/viewGender"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>
    <TextView android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@+id/viewDateOfBirth"
        android:background="@drawable/label"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="@string/dob"
        android:layout_alignTop="@+id/viewGender"
        android:layout_toLeftOf="@+id/editTextCustomerLName"
        android:layout_toStartOf="@+id/editTextCustomerLName" />
    <EditText
        android:id="@+id/editTextDateOfBirth"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:background="@drawable/spinner"
        android:layout_alignTop="@+id/spinGender"
        android:layout_alignRight="@+id/viewDateOfBirth"
        android:layout_alignEnd="@+id/viewDateOfBirth"
        android:hint="Date Of Birth"/>
    <EditText
        android:id="@+id/editTextCustomerAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDateOfBirth"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>






</RelativeLayout>
    </ScrollView>

</RelativeLayout>
