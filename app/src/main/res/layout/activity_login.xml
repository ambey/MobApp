<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.activity.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <include
        android:id="@+id/welcome"
        layout="@layout/activity_welcome"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         />
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageViewMlogo"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/med_logo_final" />

            <TextView
                android:id="@+id/viewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageViewMlogo"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="@string/login_as"/>

            <RadioGroup
                android:id="@+id/radioGroupUserType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewLogin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonPatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patient"
                    />

                <RadioButton
                    android:id="@+id/radioButtonMedServiceProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servProv"
                    />
            </RadioGroup>

            <AutoCompleteTextView
                android:id="@+id/mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroupUserType"
                android:layout_marginTop="10dp"
                android:hint="@string/regMobNo"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileNumber"
                android:layout_marginTop="10dp"
                android:hint="@string/passWd"
                android:imeActionId="@integer/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/rememberMe"
                style="@style/MediumLabel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginTop="20dp"
                android:text="@string/rememberMe"/>

            <Button
                android:id="@+id/email_sign_in_button"
                style="@style/ExtraWideButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rememberMe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/login" />

<!--
            <TextView
                android:id="@+id/registerPatient"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:text="@string/signUpPatient"
                android:textColor="#0000ff"
                android:textSize="16sp"
                android:visibility="invisible" />


-->
            <TextView
                android:id="@+id/notRegistered"
                style="@style/LargeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_sign_in_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/notReg"
                android:visibility="visible" />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>

