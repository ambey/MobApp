<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.ServProvViewWorkDetails"
    android:textAlignment="gravity"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/viewWrkdetLabel"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="@string/wrk_det"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="@drawable/text_backg"
    />

    <ListView
        android:id="@+id/workDetailListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewWrkdetLabel"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/imageViewAddWork"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/workDetailListView"
        android:src="@drawable/addw1"
        android:layout_toLeftOf="@+id/textViewAddNewWork"
        android:layout_toStartOf="@+id/textViewAddNewWork"
        android:layout_marginTop="30dp"

        />
     <TextView
         android:id="@+id/textViewAddNewWork"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/workDetailListView"
         android:text="@string/add_new_work_place"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"

         />

            <Button
                android:id="@+id/buttonViewUpdate"
                style="?android:textAppearanceSmall"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewAddWork"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="@string/update"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>
            

        </RelativeLayout>
</ScrollView>
    </RelativeLayout>