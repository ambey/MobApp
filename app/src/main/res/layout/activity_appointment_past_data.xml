<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.medico.AppointmentPastData">
<TextView
    android:id="@+id/dateTextView"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:hint="Date"
    android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewRx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="View Rx"
        android:textSize="18sp"
        android:textColor="#ff0000ff"
        android:layout_toEndOf="@+id/dateTextView"
        android:layout_toRightOf="@+id/dateTextView"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textViewReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="View Report"
        android:textSize="18sp"
        android:textColor="#ff0000ff"
        android:layout_toEndOf="@+id/textViewRx"
        android:layout_toRightOf="@+id/textViewRx"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
