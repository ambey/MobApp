<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bookAppointmentForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.extenprise.mapp.service.activity.DoctorDetailsActivity"
            >




            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageViewUser"
                android:layout_marginTop="10dp"
                android:src="@drawable/dr"/>
            <TextView
                android:id="@+id/textview"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="110dp"
                android:text="Dr. "
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#006600"
                />
            <TextView
                android:id="@+id/textviewDocname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="150dp"
                android:hint="Doctor Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#006600"
                />

            <TextView
                android:id="@+id/textviewDocspeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:hint="Speciality"
                android:textSize="15sp"
                android:layout_below="@+id/textviewDocname"
                />

            <TextView
                android:id="@+id/textviewAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="150dp"
                android:text="Unavailable Today"
                android:textSize="15sp"
                android:layout_below="@+id/imageViewUser"
                android:textStyle="italic"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageViewAvailable"
                android:src="@drawable/r_circle"
                android:layout_above="@+id/ln"
                android:layout_toRightOf="@+id/textviewDocExperience"
                android:layout_alignRight="@+id/textviewClinicTimes"
                android:layout_alignEnd="@+id/textviewClinicTimes" />


            <View
                android:id="@+id/ln"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textviewAvailability"/>

            <TextView
                android:id="@+id/textviewDocQualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:hint="Qualification"
                android:textSize="15sp"
                android:layout_below="@+id/ln"
                />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="200dp"
                android:text="Exp : "
                android:textSize="15sp"
                android:layout_below="@+id/ln"
                />
            <TextView
                android:id="@+id/textviewDocExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="235dp"
                android:hint="Year"
                android:textSize="15sp"
                android:layout_below="@+id/ln"
                />
            <ImageView
                android:src="@drawable/like"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/imageviewLike"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/textviewDocQualification"/>

            <TextView
                android:id="@+id/textviewReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="180dp"
                android:text="Read Reviews"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#4166f5"
                android:layout_below="@+id/textviewDocExperience"
                />

            <TextView
                android:id="@+id/textviewClinicName"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:text="  Clinc Names"
                android:textSize="18sp"
                android:textStyle="bold"

                android:background="@drawable/text"
                android:layout_below="@+id/imageviewLike"
                />
            <TextView
                android:id="@+id/textviewClinicTimes"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="170dp"
                android:text="    Timing"
                android:textSize="18sp"
                android:textStyle="bold"

                android:background="@drawable/text"
                android:layout_below="@+id/imageviewLike"
                />
            <TextView
                android:id="@+id/textviewFirstClinic"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:text="  Clinc1"
                android:textSize="15sp"
                android:background="@drawable/text"
                android:layout_below="@+id/textviewClinicName"
                />
            <TextView
                android:id="@+id/textviewFirstclinictime"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="170dp"
                android:text="    Timing"
                android:textSize="15sp"

                android:background="@drawable/text"
                android:layout_below="@+id/textviewClinicTimes"
                />


            <TextView
                android:id="@+id/textview3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:text="Consultation Fees : "
                android:textSize="15sp"


                android:layout_below="@+id/textviewFirstClinic" />
            <TextView
                android:id="@+id/textviewFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="160dp"
                android:hint="Fees Value "                android:textSize="15sp"
                android:layout_below="@+id/textviewFirstClinic" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:text="Book Appointment"
                android:background="@drawable/button"
                android:id="@+id/buttonBookAppointment"
                android:layout_below="@+id/textview3"
                android:layout_alignLeft="@+id/imageviewLike"
                android:layout_alignStart="@+id/imageviewLike"
                android:onClick="bookAppointment"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>