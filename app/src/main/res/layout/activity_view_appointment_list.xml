<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.ViewAppointmentListActivity"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/appointmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appointment"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:layout_marginLeft="180dp"
        android:textSize="20sp"

        android:background="@drawable/spinner"
        android:id="@+id/appointmentDateTextView" />

    <ListView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentListView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/datePicker" />

    <DatePicker
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/datePicker"
        android:visibility="invisible"
        android:layout_below="@+id/appointmentDateTextView"
        android:layout_alignRight="@+id/appointmentListView"
        android:layout_alignEnd="@+id/appointmentListView" />

    </RelativeLayout>
</RelativeLayout>
