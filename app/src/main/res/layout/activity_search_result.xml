
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/searchResultLayout"
            tools:context=".SearchResult">

            <TextView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr."
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:focusable="false"/>
            <TextView
                android:id="@+id/viewDocname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:focusable="false"/>
            <TextView
                android:id="@+id/viewDocSpeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Speciality"
                android:layout_above="@+id/view2"
                android:layout_toLeftOf="@+id/imageViewAvailability"
                android:layout_toStartOf="@+id/imageViewAvailability"
                android:focusable="false"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageViewAvailability"
                android:background="@drawable/button"
                android:backgroundTint="#f00"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp(yr): "
                android:textSize="20sp"
                android:id="@+id/view2"
                android:layout_below="@+id/view1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:focusable="false"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/viewExperience"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/view2"
                android:layout_toEndOf="@+id/view2"
                android:focusable="false"
                android:hint="Year"/>
            <TextView
                android:id="@+id/viewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Location"
                android:layout_alignTop="@+id/viewExperience"
                android:layout_alignLeft="@+id/viewDocSpeciality"
                android:layout_alignStart="@+id/viewDocSpeciality"
                android:focusable="false"/>

            <TextView
                android:id="@+id/viewDocSirName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" sirName"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_above="@+id/view2"
                android:layout_toRightOf="@+id/viewDocname"
                android:layout_toEndOf="@+id/viewDocname"
                android:focusable="false"/>
        </RelativeLayout>