<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/viewSrNo"
        style="@style/mediumText"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/srno" />

    <TextView
        android:id="@+id/viewDrugName"
        style="@style/mediumText"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/drug_name" />

<!--
    <TextView
        android:id="@+id/viewDrugStrength"
        style="@style/mediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/strength" />
-->

    <TextView
        android:id="@+id/viewDoseQty"
        style="@style/mediumText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/dose_qty" />

    <TextView
        android:id="@+id/viewCourseDur"
        style="@style/mediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/course_dur" />
</LinearLayout>