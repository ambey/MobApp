<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.PatientHistoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/historyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Data"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/textViewHistoryPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"/>


    <TextView
        android:id="@+id/myAppointmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historyView"
        android:text="My Appointments"
        android:textSize="18sp"
        android:layout_marginTop="40dp"/>
    <ListView
        android:id="@+id/myAppointmentListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/myAppointmentView"
        android:background="@drawable/list"/>

    <TextView
        android:id="@+id/otherDataView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myAppointmentListView"
        android:text="Other Data"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        />
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/otherDataListView"
                android:layout_below="@+id/otherDataView"
                android:layout_marginTop="10dp"
                android:background="@drawable/list"/>

</RelativeLayout>
    </ScrollView>


</RelativeLayout>
