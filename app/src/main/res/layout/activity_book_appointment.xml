<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/bookAppointmentForm"
    tools:context="com.extenprise.mapp.service.activity.BookAppointment">

    <ProgressBar
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView android:text="Book Appointment"
        android:layout_width="wrap_content"
        android:background="@drawable/spinner"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />
    <TextView android:hint="Doctor speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textViewDocSpec"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/listTimeSlots"
        android:layout_alignEnd="@+id/listTimeSlots" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Doctor Name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textViewDocName"
        android:layout_alignTop="@+id/textViewDocSpec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Selected Date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textViewDocSpec"
        android:layout_toLeftOf="@+id/textViewDocSpec"
        android:layout_toStartOf="@+id/textViewDocSpec" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTimeSlots"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonBook"
        android:layout_below="@+id/btnChangeDate" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Book"
        android:padding="10dp"
        android:textColor="#fff"
        android:id="@+id/buttonBook"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnChangeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Date"
        android:layout_below="@+id/tvDate"
        android:layout_alignRight="@+id/tvDate"
        android:layout_alignEnd="@+id/tvDate" />

    <DatePicker
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/datePicker"
        android:layout_below="@+id/tvDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

</RelativeLayout>