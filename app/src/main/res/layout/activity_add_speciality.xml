<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddSpecialityActivity">

    <ProgressBar
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/addSpecForm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewServiceLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/label"
                android:text="@string/service"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/editTextService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewServiceLbl"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner"
                android:entries="@array/speciality"
                android:inputType="textAutoComplete" />

            <TextView
                android:id="@+id/viewSpecialityLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextService"
                android:layout_marginTop="5dp"
                android:background="@drawable/label"
                android:padding="2dp"
                android:text="@string/speciality"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/viewSpecialityLbl"
                android:layout_below="@+id/viewSpecialityLbl"
                android:layout_marginTop="5dp"
                android:hint="@string/specName"
                android:inputType="textAutoComplete" />

            <EditText
                android:id="@+id/editTextExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/editTextSpec"
                android:layout_alignTop="@+id/editTextSpec"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/editTextSpec"
                android:hint="@string/experience"
                android:inputType="number" />



            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/label"
                android:padding="2dp"
                android:text="Qualification"
                android:textSize="18dp"
                android:layout_below="@+id/editTextSpec"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Your Qualification"
                android:inputType="textAutoComplete"
                android:layout_below="@+id/textView"/>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonAddSpec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="addNewSpeciality"
        android:padding="10dp"
        android:text="@string/add_new_spec"
        android:visibility="invisible"
        android:layout_below="@+id/addSpecForm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonAddWorkPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="addWorkPlace"
        android:padding="10dp"
        android:text="@string/add_work_place"
        android:layout_below="@+id/buttonAddSpec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonAddWorkPlace"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/buttonAddSpec"
        android:background="@drawable/button"
        android:onClick="saveData"
        android:padding="10dp"
        android:text="@string/thats_it"
        android:visibility="invisible" />


</RelativeLayout>