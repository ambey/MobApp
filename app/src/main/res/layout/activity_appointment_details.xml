<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.AppointmentDetails">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/appointmentDetailsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppointMent Details"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/textViewPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:layout_below="@+id/appointmentDetailsView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewPatientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:layout_below="@+id/textViewPatientName"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Weight"
        android:layout_below="@+id/textViewPatientName"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textViewPatientAge"
        android:layout_toRightOf="@+id/textViewPatientAge"
        android:layout_marginLeft="50dp"
        />

        
</RelativeLayout>
    </ScrollView>

</RelativeLayout>
