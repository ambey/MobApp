<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".AddWorkPlaceActivity">


    <EditText
        android:id="@+id/editTextSpeciality"
        android:layout_width="220dp"
        android:layout_height="25dp"
        android:hint="Speciality *"
        android:background="@drawable/text"
        android:inputType="textAutoComplete"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/editTextExperience"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/editTextSpeciality"
        android:layout_alignTop="@id/editTextSpeciality"
        android:layout_alignBottom="@id/editTextSpeciality"
        android:layout_marginLeft="10dp"
        android:hint="Exp (Yr) *"
        android:background="@drawable/text"
        android:textSize="18dp"
        android:inputType="number"/>


    <EditText
        android:id="@+id/editTextQualification"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/editTextSpeciality"
        android:layout_alignLeft="@id/editTextSpeciality"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:hint="Qualification *"
        android:background="@drawable/text"
        android:textSize="18dp"/>



    <TextView
        android:id="@+id/viewWorkPlaceDetLbl"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextQualification"
        android:layout_alignLeft="@id/editTextSpeciality"
        android:text="@string/work_place_details"
        android:background="@drawable/label"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/viewWorkPlaceCount"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/viewWorkPlaceDetLbl"
        android:layout_toRightOf="@id/viewWorkPlaceDetLbl"
        android:layout_alignTop="@id/viewWorkPlaceDetLbl"
        android:layout_alignBottom="@id/viewWorkPlaceDetLbl"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="#1"
        android:background="@drawable/label"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <ProgressBar
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/addWorkPlaceForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editTextSpeciality"
        android:layout_below="@+id/viewWorkPlaceDetLbl">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Name *"
                android:inputType="textAutoComplete"/>

            <Spinner
                android:id="@+id/viewWorkPlaceType"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/editTextName"
                android:layout_toRightOf="@id/editTextName"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/spinner"
                android:entries="@array/work_place_type"
                android:prompt="@string/work_place_type" />

            <EditText
                android:id="@+id/editTextLoc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextName"
                android:hint="Location *"
                android:inputType="textAutoComplete"/>

            <Spinner
                android:id="@+id/editTextCity"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/editTextLoc"
                android:layout_alignBottom="@+id/editTextLoc"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/spinner"
                android:entries="@array/city"
                android:prompt="@string/city" />

            <EditText
                android:id="@+id/editTextPhone1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextLoc"
                android:hint="Phone 1 *"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/editTextPhone2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/editTextPhone1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/editTextPhone1"
                android:hint="Phone 2 (Optional)"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextPhone1"
                android:hint="Email ID"
                android:inputType="textEmailAddress"/>

            <TextView
                android:id="@+id/viewWorkHrsLbl"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@id/editTextEmail"
                android:layout_margin="4dp"
                android:text="@string/work_hrs"
                android:background="@drawable/label"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/buttonStartTime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewWorkHrsLbl"
                android:text="@string/start_time"
                android:onClick="showStartTimePicker" />

            <Button
                android:id="@+id/buttonEndTime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/buttonStartTime"
                android:layout_toRightOf="@+id/buttonStartTime"
                android:layout_marginLeft="10dp"
                android:text="@string/end_time"
                android:onClick="showEndTimePicker" />

            <TextView
                android:id="@+id/viewWeeklyOffLbl"
                android:layout_width="fill_parent"
                android:layout_below="@id/buttonStartTime"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:text="@string/weekly_off"
                android:background="@drawable/label"
                android:textColor="#fff"/>

            <!--<Spinner
                android:id="@+id/editTextWeeklyOff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewWeeklyOffLbl"
                android:background="@drawable/spinner"
                android:entries="@array/days"
                android:prompt="@string/weekly_off" />-->
            <Button
                android:id="@+id/editTextWeeklyOff"
                android:background="@drawable/spinner"
                android:layout_width="160.0dip"
                android:text="Select Days"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewWeeklyOffLbl"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/buttonAddWorkPlace"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextWeeklyOff"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:background="@drawable/button"
                android:onClick="addNewWorkPlace"
                android:text="@string/add_new_work_place"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/buttonDone"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/buttonAddWorkPlace"
                android:layout_alignTop="@+id/buttonAddWorkPlace"
                android:layout_alignBottom="@id/buttonAddWorkPlace"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:background="@drawable/button"
                android:onClick="registerDone"
                android:text="@string/thats_it"
                android:textColor="#fff"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>