<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.viewRxActivity">

    <TextView
        android:id="@+id/viewRxDetailsLbl"
        style="@style/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rx_details" />

    <TextView
        android:id="@+id/viewDate"
        style="@style/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/date" />

    <include
        android:id="@+id/layoutAppont"
        layout="@layout/activity_view_appointment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewRxDetailsLbl"
        android:layout_marginTop="10dp" />

    <include
        android:id="@+id/rxTableHeaderLayout"
        layout="@layout/layout_rx_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutAppont"
        android:layout_marginTop="20dp" />

    <ListView
        android:id="@+id/listRxItems"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rxTableHeaderLayout"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
