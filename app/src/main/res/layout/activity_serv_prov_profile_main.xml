<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.ServProvProfileMain"
    >

    <ProgressBar
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/viewdrLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drLbl"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageViewDoctor"
        android:layout_toRightOf="@+id/imageViewDoctor"
        android:layout_toEndOf="@+id/imageViewDoctor"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/imageViewDoctor"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:onClick="changeImage"
        android:src="@drawable/dr" />

    <TextView
        android:id="@+id/textViewEditImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:clickable="true"
        android:onClick="changeImage"
        android:background="@drawable/p12"
        android:layout_alignBottom="@+id/imageViewDoctor"
        android:layout_alignRight="@+id/imageViewDoctor"
        android:layout_alignEnd="@+id/imageViewDoctor" />

    <TextView
        android:id="@+id/textviewDocname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/viewdrLbl"
        android:layout_toRightOf="@+id/viewdrLbl"
        android:hint="@string/drName"
        android:textColor="#006600"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/linenView"
        android:layout_width="fill_parent"
        android:layout_height="0.4dp"
        android:layout_below="@+id/imageViewDoctor"
        android:layout_marginTop="20dp"
        android:background="#9d9d9d" />


    <ScrollView
        android:id="@+id/updateServProvform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linenView"
        android:layout_marginTop="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <TextView
                android:id="@+id/textViewDoc"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="@string/personalDetails"
                android:textSize="16sp"
                android:textColor="#fff"
                android:clickable="true"
                android:onClick="openPersonalInfo"
                android:background="@drawable/label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textViewEditEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="@string/edit1"
                android:clickable="true"
                android:onClick="editPersonalInfo"
                android:layout_marginTop="8dp"
                android:layout_alignTop="@+id/textViewDoc"
                android:layout_toLeftOf="@+id/viewEditEducation"
                android:layout_toStartOf="@+id/viewEditEducation"
                />
            <TextView
                android:id="@+id/viewEditEducation"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/pencil"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_alignTop="@+id/textViewDoc"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:onClick="editPersonalInfo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                />

            <RelativeLayout
                android:id="@+id/personalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewDoc"

               >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:id="@+id/viewFname"
                android:layout_marginTop="10dp"

                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/textViewFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="@string/first_name"
                android:layout_marginTop="0dp"
                android:textSize="14sp"

                android:textStyle="bold"
                android:enabled="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:id="@+id/viewLname"

                android:layout_below="@+id/viewFname"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/textViewLName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewFName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="@string/last_name"
                android:layout_marginTop="0dp"
                android:textSize="14sp"

                android:textStyle="bold"
                android:enabled="false"
                />

            <TextView
                android:id="@+id/viewMobNumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mob_num"
                android:layout_marginTop="10dp"

                android:textSize="14sp"
                android:layout_below="@+id/textViewLName" />
            <EditText
                android:id="@+id/editTextMobNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="@string/mob_num"
                android:textSize="14sp"
                android:textStyle="bold"
                android:enabled="false"
                android:inputType="number"
                android:layout_below="@+id/textViewLName" />
            <TextView
                android:id="@+id/viewEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewMobNumLabel"
                android:text="@string/mail_id"
                android:layout_marginTop="15dp"

                android:textSize="14sp"/>
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextMobNum"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="@string/mail_id"
                android:layout_marginTop="0dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:enabled="false"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/viewRegNumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewEmailLabel"
                android:text="@string/reg_num"
                android:layout_marginTop="10dp"

                android:textSize="14sp"/>
            <EditText
                android:id="@+id/editTextRegNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewEmailLabel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="@string/reg_num"
                android:layout_marginTop="0dp"
                android:textSize="14sp"

                android:textStyle="bold"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/viewGenderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewRegNumLabel"
                android:text="@string/gender"
                android:layout_marginTop="15dp"

                android:textSize="14sp"/>

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="wrap_content"
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/editTextRegNum"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:enabled="false"
                    android:id="@+id/radioButtonMale"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:enabled="false"
                    android:id="@+id/radioButtonFemale"
                    android:layout_marginLeft="30dp"
                    />
            </RadioGroup>
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewWorkDetails"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="@string/wrk_det"
                android:textSize="16sp"
                android:textColor="#fff"
                android:clickable="true"
                android:layout_below="@+id/personalInfo"
                android:onClick="openWorkPlaceInfo"
                android:background="@drawable/label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"/>


        <RelativeLayout
            android:id="@+id/workPlaceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewWorkDetails"
            android:visibility="gone"
           >

            <ListView
                android:id="@+id/workDetailListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textViewAddNewWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new_work_place"
                android:clickable="true"
                android:onClick="addNewWorkPlace"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="82dp"
                android:layout_marginStart="82dp" />

            <TextView
                android:id="@+id/textViewRemoveWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workDetailListView"
                android:layout_toEndOf="@+id/textViewAddNewWork"
                android:layout_toRightOf="@+id/textViewAddNewWork"
                android:layout_marginLeft="20dp"
                android:text="@string/remove_work_place"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="removeWorkPlace"
                />

                </RelativeLayout>
            <Button
                android:id="@+id/buttonViewUpdate"
                style="?android:textAppearanceSmall"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workPlaceInfo"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:text="@string/update"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:onClick="updateProfile"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
