<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.extenprise.mapp.service.activity.ViewAppointment">

    <TextView
        android:id="@+id/patientFNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/first_name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/patientLNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/patientFNameTextView"
        android:layout_marginLeft="5dp"
        android:text="@string/last_name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/patientGenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patientFNameTextView"
        android:hint="Gender"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/patientAgeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patientFNameTextView"
        android:layout_alignLeft="@id/patientFNameTextView"
        android:layout_marginTop="10dp"
        android:text="@string/age"
        android:textSize="15sp"
        android:layout_marginLeft="45dp"/>

    <TextView
        android:id="@+id/yearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/patientAgeTextView"
        android:layout_toRightOf="@+id/patientAgeTextView"
        android:layout_alignBaseline="@id/patientAgeTextView"
        android:layout_marginLeft="10dp"
        android:text="@string/year"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/patientWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/yearTextView"
        android:layout_toRightOf="@id/yearTextView"
        android:layout_alignBaseline="@id/patientAgeTextView"
        android:layout_marginLeft="60dp"
        android:text="@string/weight"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/patientWeightTextView"
        android:layout_toRightOf="@+id/patientWeightTextView"
        android:layout_alignBaseline="@id/patientAgeTextView"
        android:layout_marginLeft="10dp"
        android:text="@string/kg"
        android:textSize="15sp"
        android:id="@+id/textView3" />

     <TextView
        android:id="@+id/appointmentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="@string/time"
        android:textSize="15sp"
         android:layout_alignBottom="@+id/patientLNameTextView"
         android:layout_toRightOf="@+id/textView3"
         android:layout_toEndOf="@+id/textView3" />

</RelativeLayout>

