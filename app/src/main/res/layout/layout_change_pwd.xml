    <EditText
        android:id="@+id/editTextOldPasswd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/oldPwd"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/editTextCnfPasswd"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextNewPasswd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/newPwd"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/editTextCnfPasswd"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextCnfPasswd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/passWdCon"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/editTextRegistrationNumber"
        android:inputType="textPassword" />

</LinearLayout>