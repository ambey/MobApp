<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.ServProvBasicInfo">

    <TextView
        android:id="@+id/textViewInfoLable"
        android:text="Personal Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
       />
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewInfoLable">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/viewContinfoLabel"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/con_info"
            android:textSize="16sp"
            android:background="@drawable/text_backg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textViewEditContInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/edit1"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@+id/viewContinfoLabel"
            android:layout_toLeftOf="@+id/viewEditContInfo"
            android:layout_toStartOf="@+id/viewEditContInfo"
            />

        <TextView
            android:id="@+id/viewEditContInfo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/pencil"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
           android:layout_alignTop="@+id/viewContinfoLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/viewMobNumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewContinfoLabel"
            android:text="@string/mob_num"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/editTextMobNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewContinfoLabel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/mob_num"
            android:layout_marginTop="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:editable="false"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/viewEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewMobNumLabel"
            android:text="@string/mail_id"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMobNum"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/mail_id"
            android:layout_marginTop="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:editable="false"
            />
        <TextView
            android:id="@+id/viewBasicinfoLabel"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/bas_info"
            android:textSize="16sp"
            android:background="@drawable/text_backg"
            android:layout_below="@+id/viewEmailLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/textViewEditBasicInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/edit1"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@+id/viewBasicinfoLabel"
            android:layout_toLeftOf="@+id/viewEditBasicInfo"
            android:layout_toStartOf="@+id/viewEditBasicInfo"
            />

        <TextView
            android:id="@+id/viewEditBasicInfo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/pencil"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_alignTop="@+id/viewBasicinfoLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/viewRegNumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewBasicinfoLabel"
            android:text="@string/reg_num"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/editTextRegNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewBasicinfoLabel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/reg_num"
            android:layout_marginTop="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:editable="false"
            />
        <TextView
            android:id="@+id/viewDobLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewRegNumLabel"
            android:text="@string/dob_with_format"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/editTextDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRegNum"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/dob"
            android:layout_marginTop="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:editable="false"
            />
        <TextView
            android:id="@+id/viewGenderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewDobLabel"
            android:text="@string/gender"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/editTextGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDob"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/gender"
            android:layout_marginTop="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:editable="false"
            />
        <TextView
            android:id="@+id/viewCityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewGenderLabel"
            android:text="@string/live_city"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextGender"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="@string/live_city"
            android:layout_marginTop="0dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:editable="false"
            />

        <Button
            android:id="@+id/buttonViewUpdate"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewBasicinfoLabel"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"
            android:text="@string/update"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </RelativeLayout>
</ScrollView>


</RelativeLayout>
