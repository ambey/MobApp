<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.ServProvBasicInfo">

    <TextView
        android:id="@+id/textViewInfoLable"
        style="@style/MediumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personalDetails" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewInfoLable">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewSpecCatLabel"
                style="@style/CollapseFormHeading"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:text="@string/spec_cat" />

            <TextView
                android:id="@+id/viewEditSpecCat"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/viewSpecCatLabel"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/pencil" />

            <TextView
                android:id="@+id/textViewEditSpecCat"
                style="@style/FormHeadingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewEditSpecCat"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/viewEditSpecCat"
                android:layout_toStartOf="@+id/viewEditSpecCat"
                android:text="@string/edit1" />


            <TextView
                android:id="@+id/viewCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewSpecCatLabel"
                android:layout_marginTop="20dp"
                android:text="@string/cate"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinServProvCategory"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/viewSpecCatLabel"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner"
                android:entries="@array/service_category"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5dp"
                android:prompt="@string/speciality_doc"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/viewSpecialityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewCategoryLabel"
                android:layout_marginTop="25dp"
                android:text="@string/speciality_doc"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/editTextSpeciality"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spinServProvCategory"
                android:layout_marginBottom="5dp"
                android:background="@drawable/spinner"
                android:choiceMode="singleChoice"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5dp"
                android:spinnerMode="dropdown"

                />


            <TextView
                android:id="@+id/viewContinfoLabel"
                style="@style/CollapseFormHeading"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewSpecialityLabel"
                android:layout_marginTop="40dp"
                android:text="@string/con_info" />

            <TextView
                android:id="@+id/viewEditContInfo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/viewContinfoLabel"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/pencil"
                android:onClick="editConInfo" />

            <TextView
                android:id="@+id/textViewEditContInfo"
                style="@style/FormHeadingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewEditContInfo"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/viewEditContInfo"
                android:layout_toStartOf="@+id/viewEditContInfo"
                android:onClick="editConInfo"
                android:text="@string/edit1" />


            <TextView
                android:id="@+id/viewMobNumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewContinfoLabel"
                android:layout_marginTop="10dp"
                android:text="@string/mob_num"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextMobNum"
                style="@style/MediumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/viewContinfoLabel"
                android:enabled="false"
                android:hint="@string/mob_num"
                android:inputType="phone" />

            <TextView
                android:id="@+id/viewEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewMobNumLabel"
                android:layout_marginTop="15dp"
                android:text="@string/mail_id"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextEmail"
                style="@style/MediumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editTextMobNum"
                android:layout_marginTop="0dp"
                android:enabled="false"
                android:hint="@string/mail_id"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/viewBasicinfoLabel"
                style="@style/CollapseFormHeading"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewEmailLabel"
                android:layout_marginTop="30dp"
                android:text="@string/bas_info" />

            <TextView
                android:id="@+id/viewEditBasicInfo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/viewBasicinfoLabel"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/pencil"
                android:clickable="true"
                android:onClick="editBasicInfo" />

            <TextView
                android:id="@+id/textViewEditBasicInfo"
                style="@style/FormHeadingSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewEditBasicInfo"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_toLeftOf="@+id/viewEditBasicInfo"
                android:layout_toStartOf="@+id/viewEditBasicInfo"
                android:onClick="editBasicInfo"
                android:text="@string/edit1"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/viewRegNumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewBasicinfoLabel"
                android:layout_marginTop="10dp"
                android:text="@string/reg_num"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextRegNum"
                style="@style/MediumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/viewBasicinfoLabel"
                android:layout_marginTop="0dp"
                android:enabled="false"
                android:hint="@string/reg_num" />

            <TextView
                android:id="@+id/viewGenderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewRegNumLabel"
                android:layout_marginTop="15dp"
                android:text="@string/gender"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editTextRegNum"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:focusable="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButtonFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="30dp"
                    android:focusable="true"
                    android:text="Female" />
            </RadioGroup>

            <Button
                android:id="@+id/buttonViewUpdate"
                style="@style/ExtraWideButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewBasicinfoLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="@string/update" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
