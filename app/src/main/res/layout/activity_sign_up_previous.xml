<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.medico.activity.SignUpPreviousActivity">

    <ScrollView
        android:id="@+id/signup_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@drawable/med_logo_final" />

            <Button
                android:id="@+id/signUpButton"
                style="@style/MyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="48dp"
                android:layout_marginTop="24dp"
                android:onClick="signUpPatient"
                android:text="@string/signUpPatient" />

            <View
                style="@style/Divider"
                android:layout_width="fill_parent" />

            <TextView
                style="@style/LinkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:text="@string/areYouServProv"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="4dp">

                <LinearLayout
                    style="@style/MyButton"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medicalStoreImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:onClick="signUpMedicalStore"
                        android:src="@drawable/medstore" />

                    <TextView
                        android:id="@+id/mStoreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="signUpMedicalStore"
                        android:text="@string/medicalStore"
                        android:textColor="#000" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MyButton"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/doctorImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:onClick="signUpServProv"
                        android:src="@drawable/doctor" />

                    <TextView
                        android:id="@+id/docTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="signUpServProv"
                        android:text="@string/practitionar"
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MyButton"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/diagnosticImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:onClick="signUpDiagCenter"
                        android:src="@drawable/diagcenter" />

                    <TextView
                        android:id="@+id/diagnosticTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="signUpDiagCenter"
                        android:text="@string/diagnosticCenter"
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
