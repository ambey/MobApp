<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.service.activity.PatientProfile">

    <ImageView
        android:id="@+id/imageViewPatient"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/patient" />

    <TextView
        android:id="@+id/textViewEditImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imageViewPatient"
        android:layout_alignEnd="@+id/imageViewPatient"
        android:layout_alignRight="@+id/imageViewPatient"
        android:background="@drawable/p12" />

    <TextView
        android:id="@+id/textviewPname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/imageViewPatient"
        android:layout_toRightOf="@+id/imageViewPatient"
        android:hint="@string/patient_name"
        android:textColor="#006600"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/linenView"
        android:layout_width="fill_parent"
        android:layout_height="0.4dp"
        android:layout_below="@+id/imageViewPatient"
        android:layout_marginTop="30dp"
        android:background="#9d9d9d" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linenView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/pinfoL1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/spinner"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/labelPinfo"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/pinfo"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewPinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/labelPinfo"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/labelPinfo"
                    android:layout_toRightOf="@+id/labelPinfo"
                    android:clickable="true"
                    android:onClick="editPatientInfo"
                    android:text="@string/edit1"
                    android:textSize="12sp"


                    />

                <TextView
                    android:id="@+id/viewEditPinfo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBaseline="@+id/textViewPinfo"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textViewPinfo"
                    android:layout_toRightOf="@+id/textViewPinfo"
                    android:background="@drawable/pencil"
                    android:clickable="true"
                    android:onClick="editPatientInfo" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelPatinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pinfoL1"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/viewFnameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editTextFname"
                    android:text="@string/first_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextFname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:enabled="false"
                    android:hint="@string/first_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewLnameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editTextLname"
                    android:layout_below="@+id/viewFnameLabel"
                    android:text="@string/last_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextLname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editTextFname"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:hint="@string/last_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewMailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editTextMail"
                    android:layout_below="@+id/viewFnameLabel"
                    android:text="@string/mail_id"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editTextLname"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:hint="@string/mail_id"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewDOBLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textViewDOB"
                    android:layout_below="@+id/viewMailLabel"
                    android:text="@string/dob_label"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editTextMail"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/dobFormat"
                    android:onClick="showDatePicker"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/viewHghtLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/viewWgUnit"
                    android:text="@string/height"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/viewWgUnit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/viewHghtLabel"
                    android:layout_toRightOf="@+id/viewHghtLabel"
                    android:enabled="false"
                    android:hint="@string/value"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/viewHghtUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/viewWgUnit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/editTextHeight"
                    android:layout_toRightOf="@+id/editTextHeight"
                    android:text="@string/cm"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/viewWgLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/viewWgUnit"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/editTextWeight"
                    android:layout_toStartOf="@+id/editTextWeight"
                    android:text="@string/wght"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/viewWgUnit"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/viewWgUnit"
                    android:layout_toStartOf="@+id/viewWgUnit"
                    android:enabled="false"
                    android:hint="@string/value"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/viewWgUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewDOB"
                    android:layout_marginTop="15dp"
                    android:text="@string/kg"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/viewGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/radioGroupGender"
                    android:layout_marginTop="5dp"
                    android:text="@string/gender"
                    android:textSize="14sp" />


                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/viewWgUnit"
                    android:layout_marginTop="15dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:orientation="horizontal"


                    >

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:text="@string/male"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:focusable="true"
                        android:text="@string/female"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RadioGroup>


            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/RelPatinfo"
                android:id="@+id/pinfoL2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/labelPaddr"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/addinfo"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewPaddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/labelPaddr"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/labelPaddr"
                    android:layout_toRightOf="@+id/labelPaddr"
                    android:clickable="true"
                    android:onClick="editPatientInfo"
                    android:text="@string/edit1"
                    android:textSize="12sp"


                    />

                <TextView
                    android:id="@+id/viewEditPaddr"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBaseline="@+id/textViewPaddr"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textViewPaddr"
                    android:layout_toRightOf="@+id/textViewPaddr"
                    android:background="@drawable/pencil"
                    android:clickable="true"
                    android:onClick="editPatientInfo" />


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/addrLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/pinfoL2"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextLoc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         android:layout_weight="0.5"
                        android:hint="@string/loc"
                        android:inputType="textAutoComplete"
                        android:enabled="false"/>

                    <Spinner
                        android:id="@+id/editTextCity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner"
                        android:entries="@array/city"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="5dp"
                        android:prompt="@string/city" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextZipCode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="@string/pincode"
                        android:inputType="number" />

                    <Spinner
                        android:id="@+id/editTextState"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner"
                        android:entries="@array/state"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="5dp"
                        android:prompt="@string/state" />
                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/buttonViewUpdate"
                style="?android:textAppearanceSmall"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addrLayout"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="@string/update"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>




        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
