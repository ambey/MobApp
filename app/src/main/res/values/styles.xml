<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--<item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>-->
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <!--<item name="android:buttonStyle">@style/MyButton</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:displayOptions">useLogo</item>
        <item name="displayOptions">useLogo</item>
    </style>

    <!--
        <style name="MyActionBarTabs"
            parent="@style/Widget.AppCompat.ActionBar.TabView">
            &lt;!&ndash; tab indicator &ndash;&gt;
            <item name="android:background">@drawable/actionbar_tab_indicator</item>

            &lt;!&ndash; Support library compatibility &ndash;&gt;
            <item name="background">@drawable/actionbar_tab_indicator</item>
        </style>
    -->

    <style name="RoundSquareButton">
        <item name="android:background">@drawable/square_round_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#b0171f</item>
    </style>
    <style name="RoundButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="RectButton">
        <item name="android:background">@drawable/rect_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="LinkButton">
        <item name="android:opacity">transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00f</item>
    </style>

    <style name="clear">
        <item name="android:opacity">transparent</item>
    </style>

    <style name="TextLight">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDark">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="titleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="largeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#060</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="mediumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00a</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
