<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!--
                <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        -->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_red_24dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_red_24dp</item>
        <item name="android:spinnerStyle">@style/SpinnerTheme</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.ActionBar.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionBar.Overflow</item>
        <item name="android:actionMenuTextColor">@color/ThemeColor</item>
        <item name="actionMenuTextColor">@color/ThemeColor</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <!--
                <item name="android:popupMenuStyle">@style/AppTheme.ActionBar.OverflowMenu</item>
                <item name="popupMenuStyle">@style/AppTheme.ActionBar.OverflowMenu</item>
        -->
        <!--<item name="android:buttonStyle">@style/MyButton</item>-->
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/stroked_rect</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:logo">@mipmap/ic_medico_logo</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ThemeColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AppTheme.ActionBar.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_overflow_icon</item>
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColorHint">@color/ThemeColor</item>
        <item name="android:titleTextStyle">@color/ThemeColor</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:textColor">@color/ThemeColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/separator</item>
    </style>
    <!--
        <style name="AppTheme.ActionBar.OverflowMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
            <item name="android:popupBackground">@color/ThemeColor</item>
            <item name="android:actionMenuTextColor">#fff</item>
        </style>
    -->

    <color name="ThemeColor">#dfc00000</color>
    <color name="PassiveColor">#cdcdcd</color>
    <color name="CollapseColor">#ffffffff</color>
    <color name="LinkColor">#00f</color>

    <!--
        <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
            &lt;!&ndash; tab indicator &ndash;&gt;
            <item name="android:background">@color/actionbar_bg</item>

            &lt;!&ndash; Support library compatibility &ndash;&gt;
            <item name="background">@color/actionbar_bg</item>
        </style>
    -->

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ExpandLabel">
        <item name="android:background">@drawable/expand</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ThemeColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CollapseLabel">
        <item name="android:background">@drawable/label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/CollapseColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FlatButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:height">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:background">@drawable/flat_button_bg</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="FloatButton" parent="@android:style/Widget.Button"></style>

    <style name="IconButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/raised_button</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/raised_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="RectButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rect_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="LinkButton">
        <item name="android:background">@drawable/flat_button_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#df0000ff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="InactiveLinkButton">
        <item name="android:background">#0000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/PassiveColor</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LargeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#060</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00a</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TableHead">
        <item name="android:background">@drawable/text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableRow">
        <item name="android:background">@drawable/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ExtraLargeLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00f</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LargeLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00f</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumLabelGreen">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#080</item>
    </style>

    <style name="TableHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CollapseFormHeading">
        <item name="android:background">@drawable/label</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="FormHeadingSubText">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HorizontalLineview">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.4dp</item>
    </style>

    <style name="VerticallLineview">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">0.4dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--<style name="spinner_style" >
        <item name="android:background">@drawable/spinner</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:divider">#0000</item>
        <item name="android:dividerHeight">8dp</item>
    </style>
</resources>
