<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="1.5"
            android:shape="oval">
            <gradient
                android:angle="-135"
                android:endColor="@color/dark_shadow"
                android:startColor="@color/light_shadow" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary_color" />
        </shape>
    </item>
    <item>
        <bitmap
            android:alpha="1.0"
            android:src="@drawable/ic_action_edit"
            android:tint="#fff" />
    </item>
</layer-list>