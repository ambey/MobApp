<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extenprise.mapp.util.RxActivity">

    <TextView
        android:id="@+id/fNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name" />

    <TextView
        android:id="@+id/lNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/fNameTextView"
        android:text="@string/last_name" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lNameTextView"
        android:layout_marginLeft="150dp"
        android:text="@string/date" />

    <Button
        android:id="@+id/addButton"
        style="@style/RoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:text="@string/add" />

    <Button
        android:id="@+id/doneButton"
        style="@style/RoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addButton"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/addButton"
        android:text="@string/done" />

    <EditText
        android:id="@+id/altDrugEditText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/addButton"
        android:hint="@string/alt_drug"
        android:inputType="text" />

    <EditText
        android:id="@+id/altDrugStrengthEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/altDrugEditText"
        android:layout_toRightOf="@id/altDrugEditText"
        android:layout_marginLeft="10dp"
        android:hint="@string/strength"
        android:inputType="text" />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/altDrugEditText"
        android:layout_toRightOf="@id/altDrugStrengthEditText"
        android:layout_marginLeft="10dp"
        android:entries="@array/drug_type" />

    <EditText
        android:id="@+id/intakeStepsEditText"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:layout_marginRight="50dp"
        android:layout_above="@id/altDrugEditText"
        android:hint="@string/intake_steps" />

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/intakeStepsEditText"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

            <CheckBox
                android:id="@+id/morningCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/morning" />

            <TextView
                android:id="@+id/timeMTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/time"
                android:onClick="showMTimePicker"/>

            <CheckBox
                android:id="@+id/noonCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/morningCheckBox"
                android:layout_marginRight="5dp"
                android:text="@string/afternoon" />

            <TextView
                android:id="@+id/timeATextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/time"
                android:onClick="showATimePicker"/>

            <CheckBox
                android:id="@+id/eveningCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noonCheckBox"
                android:text="@string/evening" />

            <TextView
                android:id="@+id/timeETextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/time"
                android:onClick="showETimePicker"/>
    </LinearLayout>

    <EditText
        android:id="@+id/doseQtyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/timeLayout"
        android:hint="@string/dose_qty"
        android:inputType="text" />

    <EditText
        android:id="@+id/courseDurEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/doseQtyEditText"
        android:layout_toRightOf="@id/doseQtyEditText"
        android:layout_marginLeft="10dp"
        android:hint="@string/course_dur"
        android:inputType="number" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/doseQtyEditText"
        android:layout_toRightOf="@id/courseDurEditText"
        android:layout_marginLeft="10dp"
        android:entries="@array/when" />

    <EditText
        android:id="@+id/drugEditText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/doseQtyEditText"
        android:hint="@string/drug_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/drugStrengthEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/drugEditText"
        android:layout_toRightOf="@id/drugEditText"
        android:layout_marginLeft="10dp"
        android:hint="@string/strength"
        android:inputType="text" />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/drugEditText"
        android:layout_toRightOf="@id/drugStrengthEditText"
        android:layout_marginLeft="10dp"
        android:entries="@array/drug_type" />

    <TextView
        android:id="@+id/srNoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/drugEditText"
        android:text="@string/srno" />
</RelativeLayout>
